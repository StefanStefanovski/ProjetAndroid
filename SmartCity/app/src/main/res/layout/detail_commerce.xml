<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/androidbackground2">
    <!---<fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/DetailCommerceFragment"
            tools:layout="@layout/detail_commerce"
            class="com.example.smartcity.DetailCommerceFragment"
            />-->

    <TextView
            android:id="@+id/TitreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_marginTop="@android:dimen/notification_large_icon_height"
            android:layout_marginBottom="@android:dimen/app_icon_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ss"
                android:layout_width="195dp"
                android:layout_height="118dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/InfoTextView"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@android:dimen/dialog_min_width_minor"
            android:text="Description"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/DescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/FavorisBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter au favoris" />
</LinearLayout>
