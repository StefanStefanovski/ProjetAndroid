<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccueilActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/androidbackground2"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@android:dimen/notification_large_icon_height"
            android:text="BIENVENUE"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#1d373e"
            android:fontFamily="monospace"/>

        <Button
            android:id="@+id/actualiteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualité" />

        <Button
            android:id="@+id/commerceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commerces" />

        <Button
            android:id="@+id/reseauButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réseaux Sociaux" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@android:dimen/thumbnail_width"
            android:orientation="horizontal">

            <Button
                android:id="@+id/parametresButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paramétres" />

            <Button
                android:id="@+id/configurationsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Configurations" />

        </LinearLayout>

        <Button
            android:id="@+id/DeconexionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deconnexion"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:background="#F4511E"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>