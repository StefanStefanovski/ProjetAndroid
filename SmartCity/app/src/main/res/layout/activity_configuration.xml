<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".ConfigurationActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@drawable/androidbackground2"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/logo"
            android:layout_marginBottom="@android:dimen/app_icon_size"/>

        <Button
            android:id="@+id/DemandesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demandes"
            android:layout_marginBottom="@android:dimen/app_icon_size"/>

        <Button
            android:id="@+id/CreerEvenementBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer Evennement"
            android:layout_marginBottom="@android:dimen/app_icon_size"/>

        <Button
            android:id="@+id/CreerReseauBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer Reseau"
            android:layout_marginBottom="@android:dimen/app_icon_size"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>